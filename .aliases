alias ls='exa -a -l --group-directories-first --git --no-user --no-time'
alias cr='cargo run'
alias gs='git status'
alias gaa='git add --all'
alias gc='git commit'
alias se='sudoedit'
alias pl='yay -Qi'
alias ps='yay -Si'
alias adios='systemctl poweroff'
alias pi='yay -S'

alias fzh='find . -type f -not -path "*/\.git/*" | fzf'
alias nf='nvim $(fzh)'
alias sef='se $(fzh)'
